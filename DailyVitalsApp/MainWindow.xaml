<Window x:Class="DailyVitals.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DailyVitals"
        Height="300"
        Width="400">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Main content -->
        <StackPanel Grid.Row="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">

            <Button Content="Enter Blood Pressure"
                    Width="200"
                    Height="40"
                    Margin="0,0,0,15"
                    Click="OpenBloodPressure_Click"/>

            <Button Content="Enter Blood Glucose"
                    Width="200"
                    Height="40"
                    Click="OpenBloodGlucose_Click"/>
        </StackPanel>

        <!-- Exit button (bottom-left) -->
        <Button Grid.Row="1"
                Content="Exit"
                Width="80"
                Height="30"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Click="Exit_Click"/>
    </Grid>
</Window>
