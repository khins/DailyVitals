<Window x:Class="DailyVitals.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DailyVitals"
        Height="300"
        Width="400">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Main content -->
        <Button Content="Enter Blood Pressure"
                Width="200"
                Height="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="OpenBloodPressure_Click"/>

        <!-- Exit button (bottom-left) -->
        <Button Grid.Row="1"
                Content="Exit"
                Width="80"
                Height="30"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Click="Exit_Click"/>
    </Grid>
</Window>
