<Window x:Class="DailyVitals.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DailyVitals"
        Height="420"
        Width="400">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
          
        </Grid.RowDefinitions>

        <!-- MAIN BUTTONS -->
        <StackPanel Grid.Row="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">

            <Button Content="Enter Blood Pressure"
                    Width="220"
                    Height="40"
                    Margin="0,0,0,15"
                    Click="OpenBloodPressure_Click"/>

            <Button Content="Enter Blood Glucose"
                    Width="220"
                    Height="40"
                    Margin="0,0,0,15"
                    Click="OpenBloodGlucose_Click"/>

            <Button Content="Enter Weight"
                    Width="220"
                    Height="40"
                    Margin="0,0,0,12"
                    Click="OpenWeight_Click"/>

            <!-- NEW: Medication Entry -->
            <Button Content="Enter Medications"
            Width="220"
            Height="45"
            Margin="0,0,0,12"
            Click="OpenMedicationEntry_Click"/>

            <Button Content="Manage Medications"
                Width="220"
                Height="40"
                Margin="0,0,0,15"
                Click="OpenMedicationList_Click"/>


            <Button Content="Vitals Dashboard"
        Width="220"
        Height="40"
        Margin="0,5,0,0"
        Click="OpenDashboard_Click"/>

        </StackPanel>

        <!-- EXIT -->
        <Button Grid.Row="1"
                Content="Exit"
                Width="80"
                Height="30"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Click="Exit_Click"/>
    </Grid>
</Window>
