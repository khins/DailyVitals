<Window x:Class="DailyVitals.App.Views.VitalsDashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vitals Dashboard"
        Height="500"
        Width="720"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- PERSON SELECT -->
        <ComboBox Width="260"
                  ItemsSource="{Binding Persons}"
                  SelectedItem="{Binding SelectedPerson}"
                  DisplayMemberPath="FullName"/>

        <!-- VITALS PANELS -->
        <UniformGrid Grid.Row="1"
                     Columns="3"
                     Margin="0,15,0,0">

            <!-- BLOOD PRESSURE -->
            <Border Margin="8"
                    Padding="10"
                    CornerRadius="6"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Background="{Binding LatestBP.SeverityBrush}">
                <StackPanel>
                    <TextBlock Text="Blood Pressure" FontWeight="Bold"/>
                    <TextBlock Text="{Binding LatestBP.DisplayValue}"/>
                    <TextBlock Text="{Binding LatestBP.ReadingTime, StringFormat=d}"/>
                </StackPanel>
            </Border>

            <!-- GLUCOSE -->
            <Border Margin="8"
                    Padding="10"
                    CornerRadius="6"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Background="{Binding LatestGlucose.SeverityBrush}">
                <StackPanel>
                    <TextBlock Text="Blood Glucose" FontWeight="Bold"/>
                    <TextBlock Text="{Binding LatestGlucose.GlucoseValue}"/>
                    <TextBlock Text="{Binding LatestGlucose.ReadingTime, StringFormat=d}"/>
                </StackPanel>
            </Border>

            <!-- WEIGHT / BMI -->
            <Border Margin="8"
                    Padding="10"
                    CornerRadius="6"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Background="{Binding BMIBrush}">
                <StackPanel>
                    <TextBlock Text="Weight / BMI" FontWeight="Bold"/>
                    <TextBlock Text="{Binding LatestWeight.WeightValue}"/>
                    <TextBlock Text="{Binding BMI, StringFormat=F1}"/>
                </StackPanel>
            </Border>

        </UniformGrid>

        <!-- CLOSE BUTTON -->
        <Button Grid.Row="2"
        Content="Close"
        Width="90"
        Height="32"
        HorizontalAlignment="Right"
        Margin="0,12,0,0"
        Click="Close_Click"/>

    </Grid>
</Window>
