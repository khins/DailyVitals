<Window x:Class="DailyVitals.App.Views.WeightTrendView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Weight Trend"
        Height="460"
        Width="720"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Window.Resources>

        <Style x:Key="MainMenuButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="220"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#707070"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="Black"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                      x:Name="border"
                      Background="{TemplateBinding Background}"
                      BorderBrush="{TemplateBinding BorderBrush}"
                      BorderThickness="{TemplateBinding BorderThickness}"
                      CornerRadius="6">

                            <ContentPresenter
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          RecognizesAccessKey="True"/>
                        </Border>

                        <!-- Visual states -->
                        <ControlTemplate.Triggers>

                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                  Property="Background"
                                  Value="#D6D6D6"/>
                            </Trigger>

                            <!-- Pressed -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border"
                                  Property="Background"
                                  Value="#C8C8C8"/>
                            </Trigger>

                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border"
                                  Property="Background"
                                  Value="#EEEEEE"/>
                                <Setter Property="Foreground"
                                  Value="#888888"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="{Binding PersonName}"
                       FontSize="18"
                       FontWeight="Bold"/>

            <TextBlock Text="Weight Trend (lb)"
                       FontSize="13"
                       Foreground="DimGray"/>

            <TextBlock Text="{Binding DateRange}"
                       FontSize="12"
                       Foreground="Gray"/>
        </StackPanel>

        <!-- CHART AREA -->
        <Grid Grid.Row="1">
            <Canvas Width="640"
                    Height="280"
                    Background="#FFF4F4F4"
                    HorizontalAlignment="Center">

                <!-- TREND LINE -->
                <Polyline Stroke="SteelBlue"
                          StrokeThickness="3"
                          Points="{Binding TrendPoints}"/>

                <!-- START WEIGHT (LEFT) -->
                <TextBlock Text="{Binding StartWeight, StringFormat=Start: {0:F1} lb}"
                           Canvas.Left="5"
                           Canvas.Top="5"
                           FontSize="12"
                           Foreground="DimGray"/>

                <!-- END WEIGHT (RIGHT) -->
                <TextBlock Text="{Binding EndWeight, StringFormat=End: {0:F1} lb}"
                           Canvas.Right="5"
                           Canvas.Top="5"
                           FontSize="12"
                           Foreground="DimGray"/>
            </Canvas>
        </Grid>

        <!-- FOOTER SUMMARY -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding TrendSummary}"
                       FontSize="14"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>

            <Button Grid.Column="1"
                    Content="Close"
                    Width="90"
                    Height="32"
                    Style="{StaticResource MainMenuButtonStyle}"
                    Margin="10,0,0,0"
                    Click="Close_Click"/>
        </Grid>
    </Grid>
</Window>
