<Window x:Class="DailyVitals.App.Views.WeightTrendView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Weight Trend"
        Height="460"
        Width="720"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="{Binding PersonName}"
                       FontSize="18"
                       FontWeight="Bold"/>

            <TextBlock Text="Weight Trend (lb)"
                       FontSize="13"
                       Foreground="DimGray"/>

            <TextBlock Text="{Binding DateRange}"
                       FontSize="12"
                       Foreground="Gray"/>
        </StackPanel>

        <!-- CHART AREA -->
        <Grid Grid.Row="1">
            <Canvas Width="640"
                    Height="280"
                    Background="#FFF4F4F4"
                    HorizontalAlignment="Center">

                <!-- TREND LINE -->
                <Polyline Stroke="SteelBlue"
                          StrokeThickness="3"
                          Points="{Binding TrendPoints}"/>

                <!-- START WEIGHT (LEFT) -->
                <TextBlock Text="{Binding StartWeight, StringFormat=Start: {0:F1} lb}"
                           Canvas.Left="5"
                           Canvas.Top="5"
                           FontSize="12"
                           Foreground="DimGray"/>

                <!-- END WEIGHT (RIGHT) -->
                <TextBlock Text="{Binding EndWeight, StringFormat=End: {0:F1} lb}"
                           Canvas.Right="5"
                           Canvas.Top="5"
                           FontSize="12"
                           Foreground="DimGray"/>
            </Canvas>
        </Grid>

        <!-- FOOTER SUMMARY -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding TrendSummary}"
                       FontSize="14"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>

            <Button Grid.Column="1"
                    Content="Close"
                    Width="90"
                    Height="32"
                    Margin="10,0,0,0"
                    Click="Close_Click"/>
        </Grid>
    </Grid>
</Window>
