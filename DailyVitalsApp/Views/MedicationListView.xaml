<Window x:Class="DailyVitals.App.Views.MedicationListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Medications"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>

        <Style x:Key="MainMenuButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="220"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#707070"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="Black"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                      x:Name="border"
                      Background="{TemplateBinding Background}"
                      BorderBrush="{TemplateBinding BorderBrush}"
                      BorderThickness="{TemplateBinding BorderThickness}"
                      CornerRadius="6">

                            <ContentPresenter
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          RecognizesAccessKey="True"/>
                        </Border>

                        <!-- Visual states -->
                        <ControlTemplate.Triggers>

                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                  Property="Background"
                                  Value="#D6D6D6"/>
                            </Trigger>

                            <!-- Pressed -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border"
                                  Property="Background"
                                  Value="#C8C8C8"/>
                            </Trigger>

                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border"
                                  Property="Background"
                                  Value="#EEEEEE"/>
                                <Setter Property="Foreground"
                                  Value="#888888"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Person -->
        <ComboBox ItemsSource="{Binding Persons}"
                  SelectedItem="{Binding SelectedPerson}"
                  DisplayMemberPath="FullName"
                  Width="250"/>

        <!-- Medication Grid -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Medications}"
                  SelectedItem="{Binding SelectedMedication}"
                  AutoGenerateColumns="False"
                  Margin="0,10,0,10">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Medication" Binding="{Binding MedicationName}"/>
                <DataGridTextColumn Header="Dosage (mg)" Binding="{Binding DosageMg}"/>
                <DataGridTextColumn Header="Form" Binding="{Binding DosageForm}"/>
                <DataGridCheckBoxColumn Header="Morning" Binding="{Binding TakeMorning}"/>
                <DataGridCheckBoxColumn Header="Noon" Binding="{Binding TakeNoon}"/>
                <DataGridCheckBoxColumn Header="Evening" Binding="{Binding TakeEvening}"/>
                <DataGridCheckBoxColumn Header="Bedtime" Binding="{Binding TakeBedtime}"/>
                <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Deactivate"
                    Width="100"
                    Margin="0,0,10,0"
                    Style="{StaticResource MainMenuButtonStyle}"
                    Click="Deactivate_Click"/>
            <Button Content="Close"
                    Width="80"
                    Margin="0,0,10,0"
                    Style="{StaticResource MainMenuButtonStyle}"
                    Click="Close_Click"/>
            <Button Content="Edit"
                    Width="80"
                    Margin="0,0,10,0"
                    Style="{StaticResource MainMenuButtonStyle}"
                    Click="Edit_Click"/>

        </StackPanel>
    </Grid>
</Window>
