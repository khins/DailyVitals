<Window x:Class="DailyVitals.App.Views.BloodPressureTrendView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Blood Pressure Trend"
        Height="500"
        Width="800"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <TextBlock Grid.Row="0"
                   Text="{Binding HeaderText}"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15"/>

        <!-- CHART AREA -->
        <Border Grid.Row="1"
                BorderBrush="#DDD"
                BorderThickness="1"
                Background="White"
                Padding="10">

            <Canvas Height="350"
                    Background="White">
                <ItemsControl ItemsSource="{Binding SystolicLabels}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style>
                            <Setter Property="Canvas.Left" Value="{Binding X}" />
                            <Setter Property="Canvas.Top" Value="{Binding Y}" />
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Value}"
                       Foreground="Red"
                       FontWeight="Bold"
                       FontSize="12"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <ItemsControl ItemsSource="{Binding DiastolicLabels}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style>
                            <Setter Property="Canvas.Left" Value="{Binding X}" />
                            <Setter Property="Canvas.Top" Value="{Binding Y}" />
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Value}"
                       Foreground="Blue"
                       FontWeight="Bold"
                       FontSize="12"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- SYSTOLIC LINE -->
                <Polyline Points="{Binding SystolicPoints}"
                          Stroke="Red"
                          StrokeThickness="3"/>

                <!-- DIASTOLIC LINE -->
                <Polyline Points="{Binding DiastolicPoints}"
                          Stroke="Blue"
                          StrokeThickness="3"/>

            </Canvas>
        </Border>

        <!-- LEGEND -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,15,0,0">

            <StackPanel Orientation="Horizontal"
                        Margin="20,0">
                <Rectangle Width="20"
                           Height="3"
                           Fill="Red"
                           VerticalAlignment="Center"/>
                <TextBlock Text="  Systolic"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="20,0">
                <Rectangle Width="20"
                           Height="3"
                           Fill="Blue"
                           VerticalAlignment="Center"/>
                <TextBlock Text="  Diastolic"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                    Content="Close"
                    Width="90"
                    Height="32"
                    Margin="70,0,0,0"
                    Click="Close_Click"/>
            </StackPanel>

        </StackPanel>
 
    </Grid>

</Window>
