<Window x:Class="DailyVitals.App.Views.ExerciseEntryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exercise Entry"
        Height="550"
        Width="900"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>

        <Style x:Key="MainMenuButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="220"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#707070"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="Black"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                       x:Name="border"
                       Background="{TemplateBinding Background}"
                       BorderBrush="{TemplateBinding BorderBrush}"
                       BorderThickness="{TemplateBinding BorderThickness}"
                       CornerRadius="6">

                            <ContentPresenter
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           RecognizesAccessKey="True"/>
                        </Border>

                        <!-- Visual states -->
                        <ControlTemplate.Triggers>

                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                   Property="Background"
                                   Value="#D6D6D6"/>
                            </Trigger>

                            <!-- Pressed -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border"
                                   Property="Background"
                                   Value="#C8C8C8"/>
                            </Trigger>

                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border"
                                   Property="Background"
                                   Value="#EEEEEE"/>
                                <Setter Property="Foreground"
                                   Value="#888888"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- PERSON -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,10">
            <TextBlock Text="Person:"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"/>
            <ComboBox Width="240"
                      ItemsSource="{Binding Persons}"
                      SelectedItem="{Binding SelectedPerson}"
                      DisplayMemberPath="FullName"/>
        </StackPanel>

        <!-- HISTORY GRID -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding History}"
                  SelectedItem="{Binding SelectedSession, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  Height="220"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date"
                                    Binding="{Binding StartTime, StringFormat=d}"
                                    Width="120"/>
                <DataGridTextColumn Header="Exercise"
                                    Binding="{Binding ExerciseName}"
                                    Width="*"/>
                <DataGridTextColumn Header="Minutes"
                                    Binding="{Binding DurationMinutes}"
                                    Width="100"/>
                <DataGridTextColumn Header="Intensity"
                                    Binding="{Binding Intensity}"
                                    Width="120"/>
                <DataGridTextColumn Header="Notes"
                                    Binding="{Binding Notes}"
                                    Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- ENTRY FORM -->
        <GroupBox Grid.Row="2"
                  Header="Exercise Details"
                  Margin="0,0,0,12">
            <Grid Margin="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- SHARED WIDTH CONSTANT -->
                <!-- All controls use Width=240 and Left alignment -->

                <!-- Exercise -->
                <TextBlock Text="Exercise:"
                           Grid.Row="0"
                           Grid.Column="0"
                           VerticalAlignment="Center"/>

                <ComboBox Grid.Row="0"
                          Grid.Column="1"
                          Width="240"
                          HorizontalAlignment="Left"
                          ItemsSource="{Binding ExerciseTypes}"
                          SelectedItem="{Binding SelectedExercise, Mode=TwoWay}"
                          DisplayMemberPath="ExerciseName"/>

                <!-- Duration -->
                <TextBlock Text="Duration (min):"
                           Grid.Row="1"
                           Grid.Column="0"
                           Margin="0,8,0,0"
                           VerticalAlignment="Center"/>

                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Margin="0,8,0,0"
                         Width="240"
                         HorizontalAlignment="Left"
                         Text="{Binding DurationMinutes, UpdateSourceTrigger=PropertyChanged}"
                         PreviewTextInput="Duration_PreviewTextInput"/>

                <!-- Intensity -->
                <TextBlock Text="Intensity:"
                           Grid.Row="2"
                           Grid.Column="0"
                           Margin="0,8,0,0"
                           VerticalAlignment="Center"
                           />

                <ComboBox Grid.Row="2"
                          Grid.Column="1"
                          Margin="0,8,0,0"
                          Width="240"
                          HorizontalAlignment="Left"
                          ItemsSource="{Binding Intensities}"
                          SelectedItem="{Binding SelectedIntensity}"/>

                <!-- Notes -->
                <TextBlock Text="Notes:"
                           Grid.Row="3"
                           Grid.Column="0"
                           Margin="0,8,0,0"
                           VerticalAlignment="Top"/>

                <TextBox Grid.Row="3"
                         Grid.Column="1"
                         Margin="0,8,0,0"
                         Width="420"
                         Height="70"
                         HorizontalAlignment="Left"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Text="{Binding Notes, Mode=TwoWay}"/>
            </Grid>
        </GroupBox>

        <!-- BUTTONS -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Save"
                    Width="100"
                    Height="32"
                    Margin="0,0,10,0"
                    Style="{StaticResource MainMenuButtonStyle}"
                    Click="Save_Click"/>

            <Button Content="Delete"
                    Width="100"
                    Height="32"
                    Margin="0,0,10,0"
                    Style="{StaticResource MainMenuButtonStyle}"
                    Click="Delete_Click"/>

            <Button Content="Edit Selected"
                    Width="120"
                    Height="32"
                    Margin="0,0,10,0"
                    Style="{StaticResource MainMenuButtonStyle}"
                    Click="Edit_Click"/>

            <Button Content="Close"
                    Width="100"
                    Height="32"
                    Style="{StaticResource MainMenuButtonStyle}"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
