<Window x:Class="DailyVitals.App.Views.MedicationEntryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Medication Entry"
        Height="500"
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Window.Resources>

        <Style x:Key="MainMenuButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="220"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#707070"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="Black"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                    x:Name="border"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="6">

                            <ContentPresenter
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        RecognizesAccessKey="True"/>
                        </Border>

                        <!-- Visual states -->
                        <ControlTemplate.Triggers>

                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                Property="Background"
                                Value="#D6D6D6"/>
                            </Trigger>

                            <!-- Pressed -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border"
                                Property="Background"
                                Value="#C8C8C8"/>
                            </Trigger>

                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border"
                                Property="Background"
                                Value="#EEEEEE"/>
                                <Setter Property="Foreground"
                                Value="#888888"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- PERSON -->
        <ComboBox ItemsSource="{Binding Persons}"
                  SelectedItem="{Binding SelectedPerson}"
                  DisplayMemberPath="FullName"
                  Width="250"/>

        <!-- FORM -->
        <!-- FORM -->
        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Medication -->
            <TextBlock Text="Medication:" Grid.Row="0" VerticalAlignment="Center"/>
            <TextBox Text="{Binding MedicationName}"
             Grid.Row="0"
             Grid.Column="1"
             Height="28"/>

            <!-- Dosage -->
            <TextBlock Text="Dosage (mg):" Grid.Row="2" VerticalAlignment="Center"/>
            <TextBox Text="{Binding DosageMg}"
             Grid.Row="2"
             Grid.Column="1"
             Height="28"/>

            <!-- Form -->
            <TextBlock Text="Form:" Grid.Row="4" VerticalAlignment="Center"/>
            <TextBox Text="{Binding DosageForm}"
             Grid.Row="4"
             Grid.Column="1"
             Height="28"/>

            <!-- Schedule -->
            <TextBlock Text="Schedule:" Grid.Row="6" VerticalAlignment="Center"/>
            <StackPanel Grid.Row="6"
                Grid.Column="1"
                Orientation="Horizontal"
                VerticalAlignment="Center">
                <CheckBox Content="Morning"
                  IsChecked="{Binding TakeMorning}"
                  Margin="0,0,12,0"/>
                <CheckBox Content="Noon"
                  IsChecked="{Binding TakeNoon}"
                  Margin="0,0,12,0"/>
                <CheckBox Content="Evening"
                  IsChecked="{Binding TakeEvening}"
                  Margin="0,0,12,0"/>
                <CheckBox Content="Bedtime"
                  IsChecked="{Binding TakeBedtime}"/>
            </StackPanel>

            <!-- Instructions -->
            <TextBlock Text="Instructions:" Grid.Row="8" VerticalAlignment="Top"/>
            <TextBox Text="{Binding Instructions}"
             Grid.Row="8"
             Grid.Column="1"
             Height="80"
             AcceptsReturn="True"
             TextWrapping="Wrap"/>

            <!-- Prescribed By -->
            <TextBlock Text="Prescribed By:" Grid.Row="10" VerticalAlignment="Center"/>
            <TextBox Text="{Binding PrescribedBy}"
             Grid.Row="10"
             Grid.Column="1"
             Height="28"/>
        </Grid>

        <!-- BUTTONS -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="Save"
                    Width="90"
                    Margin="0,0,10,0"
                    Style="{StaticResource MainMenuButtonStyle}"
                    Click="Save_Click"/>
            <Button Content="Close"
                    Width="90"
                    Style="{StaticResource MainMenuButtonStyle}"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
